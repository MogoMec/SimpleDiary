<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToolbarItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">12.0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/toolbar</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyRadioButton">
        <item name="android:textColor">@drawable/my_button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
</resources>